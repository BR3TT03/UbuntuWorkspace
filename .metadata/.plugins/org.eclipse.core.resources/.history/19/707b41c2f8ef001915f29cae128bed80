package com.famas.service.impl;

import java.util.List;

import org.springframework.stereotype.Service;

import com.famas.model.Book;
import com.famas.repository.BookRepository;
import com.famas.service.BookService;
import com.famas.service.DatabaseService;

@Service
public class BookServiceImpl implements BookService{
	DatabaseService databaseService;
	
	public BookServiceImpl(DatabaseService databaseService) {
		this.databaseService = databaseService;
	}


	@Override
	public List<Book> getAllBooks() {
		BookRepository bookRepository = databaseService.getDaoClass(BookRepository.class);
		return bookRepository.getAllBooks();
	}


	@Override
	public void addBook(Book book) {
		BookRepository bookRepository = databaseService.getDaoClass(BookRepository.class);
		bookRepository.addBook(book);
	}

}
